<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><a href = "boooks/show">Show</a></td>
      <td><a href = "boooks/edit">Edit</a></td>
      <td><a>Destroy</a></td>
    </tr>
    <% end %>
  </tbody>
</table>


<div id="error_explanation">

   <% if @book.errors.any? %>
     <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
     <ul>
       <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
     <% else %>
      <input type="hidden">
   <% end %>
</div>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
   <div class="field">
     <h4>Title</h4>
     <%= f.text_field :title %>
   </div>
   <div class="field">
     <h4>Body</h4>
     <%= f.text_area :body %>
   </div>
   <div class="actions">
     <%= f.submit 'Create Book' %>
   </div>
<% end %>