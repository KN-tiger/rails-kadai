<% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Editing Book</h1>

<div id="error_explanation">

   <% if @bookf.errors.any? %>
     <h2><%= @bookf.errors.count %>errors prohibited this book from being saved:</h2>
     <ul>
       <% @bookf.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
    <% end %>
</div>


<%= form_with model: @bookf, method: :patch do |f| %>
   <div class="field">
     <h4>Title</h4>
     <%= f.text_field :title %>
   </div>
   <div class="field">
     <h4>Body</h4>
     <%= f.text_area :body %>
   </div>
   <div class="actions">
     <%= f.submit 'Update Book' %>
   </div>
<% end %>

<%= link_to "Show", book_path(@bookf.id) %>|<a href="/books">Back</a>


